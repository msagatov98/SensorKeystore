<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:inputType="text"
        android:layout_margin="16dp"
        android:id="@+id/input_string"
        android:hint="@string/input_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="16dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_save_keystore"
        android:id="@+id/btn_save_string_keystore"/>

    <Button
        android:layout_margin="16dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_get_keystore"
        android:id="@+id/btn_get_last_saved_keystore"/>

</LinearLayout>